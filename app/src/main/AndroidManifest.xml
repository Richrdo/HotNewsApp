<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hotnewsapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HotNewsApp">
        <activity android:name=".view.RegisterActivity"></activity>
        <activity android:name=".view.HomeActivity" />
        <activity android:name=".view.NewsDetailActivity" />
        <activity android:name=".view.LoginActivity" /> <!-- <activity -->
        <!-- android:name=".view.login.LoginActivity" -->
        <!-- android:label="@string/title_activity_login" /> -->
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>