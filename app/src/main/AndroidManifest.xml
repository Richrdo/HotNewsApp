<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hotnewsapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HotNewsApp">
        <activity android:name=".view.activity.CollectActivity"></activity>
        <activity android:name=".view.activity.UserInfoActivity" />
        <activity android:name=".view.activity.SearchActivity" />
        <activity android:name=".view.activity.RegisterActivity" />
        <activity android:name=".view.activity.HomeActivity" />
        <activity android:name=".view.activity.NewsDetailActivity" />
        <activity android:name=".view.activity.LoginActivity" />
        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>